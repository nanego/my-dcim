<%= render List::DataTableComponent.new(data) do |table| %>
  <% table.with_column("Product") do |row| %>
    <%= row[:product] %>
  <% end %>
  <% table.with_column("Price") do |row| %>
    <%= row[:price] %>
  <% end %>
  <% table.with_column("SKU") do |row| %>
    <%= row[:sku] %>
  <% end %>
  <% table.with_column("Quantity") do |row| %>
    <%= row[:qty] %>
  <% end %>
  <% table.with_column("Sales") do |row| %>
    <%= row[:sales] %>
  <% end %>
<% end %>
