  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Mat√©riel</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @documents) do |document| %>
            <td><%= document.server_id %></td>
            <td><%= link_to 'Voir', document %></td>
