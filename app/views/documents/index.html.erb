<div class="page-header d-flex justify-content-between">
  <h1>Listing documents</h1>
  <%= link_to new_document_path, class: 'btn btn-success align-self-center' do %>
    <span class="bi bi-plus-lg"></span>
    New Document
  <% end %>
</div>

