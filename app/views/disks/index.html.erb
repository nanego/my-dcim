<%= render 'layouts/breadcrumb', breadcrumb_variables: {
  t("breadcrumb.settings") => modeles_url,
  Disk.model_name.human.pluralize => '' }
%>

<div class="container-fluid">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="page-header">
      <%= link_to new_disk_path, class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus"></span>
        <%= t(".add_disk") %>
      <% end %>
      <h1>
        <%= t(".title") %>
      </h1>
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
                <th>
                  <%= Disk.model_name.human %>
                </th>
                <th>
                  <%= Server.model_name.human %>
                </th>
                <th>
                  <%= Disk.human_attribute_name(:disk_type) %>
                </th>
                <th>
                  <%= Disk.human_attribute_name(:quantity) %>
                </th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @disks) do |disk| %>
            <td><%= link_to disk, disk_path(disk) %></td>
            <td><%= link_to disk.server_id, server_path(disk.server_id) %></td>
            <td><%= link_to disk.disk_type_id, disk_type_path(disk.disk_type_id) %></td>
            <td><%= disk.quantity %></td>
            <td class="text-right">
              <%= link_to t("action.edit"), edit_disk_path(disk), class: 'btn btn-primary' %>
              <%= link_to t("action.delete"), disk, method: :delete, data: { confirm: t("action.confirm") },
                          class: 'btn btn-danger' %>
            </td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
