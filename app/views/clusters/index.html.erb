<%= render 'layouts/breadcrumb', breadcrumb_variables: {
  t("inventories") => modeles_url,
  Cluster.model_name.human.pluralize => "" }
%>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">
      <div class="page-header">
        <%= link_to new_cluster_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          <%= t(".new_cluster") %>
        <% end %>
        <h1>
          <%= t(".title") %>
        </h1>
      </div>

      <%= render List::DataTableComponent.new(@clusters) do |table| %>
        <% table.with_column(Cluster.human_attribute_name(:name), sort_by: :name) do |cluster| %>
          <%= link_to cluster, cluster_path(cluster) %>
        <% end %>

        <% table.with_column(Cluster.human_attribute_name(:servers_label)) do |cluster| %>
          <%= Cluster.human_attribute_name(:servers, count: cluster.servers.count) %>
        <% end %>

        <% table.with_column(class: "text-right") do |cluster| %>
          <%= link_to t("action.edit"), edit_cluster_path(cluster), class: 'btn btn-primary' %>
          <%= link_to t("action.delete"), cluster, method: :delete, data: { confirm: t(".delete_confirmation") },
                                                   class: 'btn btn-danger' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
