<%= render 'layouts/breadcrumb', breadcrumb_variables: {
  t("breadcrumb.settings") => modeles_url,
  Cluster.model_name.human.pluralize => "" }
%>

<div class="container-fluid">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_cluster_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          <%= t(".new_cluster") %>
        <% end %>
        <h1>
          <%= t(".title") %>
        </h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>
              <%= Cluster.human_attribute_name(:name) %>
            </th>
            <th>
              <%= Cluster.human_attribute_name(:servers_label) %>
            </th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <%= content_tag_for(:tr, @clusters) do |cluster| %>
            <td><%= link_to cluster, cluster_path(cluster) %></td>
            <td><%= Cluster.human_attribute_name(:servers, count: cluster.servers.count) %></td>
            <td class="text-right">
              <%= link_to t("action.edit"), edit_cluster_path(cluster), class: 'btn btn-primary' %>
              <%= link_to t("action.delete"),
                          cluster,
                          method: :delete,
                          data: { confirm: t(".delete_confirmation") },
                          class: 'btn btn-danger' %>
            </td>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
