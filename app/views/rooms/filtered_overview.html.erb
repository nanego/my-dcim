<%= render 'layouts/breadcrumb', breadcrumb_variables: {'AperÃ§u des salles' => overview_rooms_path, @current_filters => nil} %>

<div class="container-fluid rooms-overview">

  <div class="row">

    <div class="col-md-6 col-sm-12" id="rooms-overview" data-spy="affix" data-offset-top="53" data-offset-bottom="20">

      <% @sites.each do |site| %>
        <div style="text-align: center;">
          <h3><%= site %></h3>
        </div>
        <% rooms = site.rooms.order(:position).joins(:frames).distinct %>
        <% rooms.each do |room| %>
          <%= render 'rooms/room_overview', room: room %>
        <% end %>
      <% end %>

    </div>

    <div class="col-md-6 col-sm-12"></div>

    <div class="col-md-6 col-sm-12">
      <% @frames.each do |frame| %>
        <% settings = Frame.settings.merge({:min_height => params[:view]=='back' ? 20 : 27 }) %>
        <%= render 'frames/show_frame', frame: frame, servers: frame.servers, settings: settings, view_type: params[:view], editable: false, highlighted_servers: @filtered_servers %>
      <% end %>
    </div>

  </div>
</div>
