<div class="modal fade" id="editInfrastructureIsletModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content overflow-visible">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel"><%= t(".edit_clusters") %></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body overflow-y-visible">
        <%= form_with model: room, url: room_path(room), method: :patch, data: { turbo_frame: "_top" } do |form| %>
          <%= form.hidden_field :id %>
          <%= hidden_field_tag :infrastructure, true %>

          <fieldset class="col-12 mt-4">
            <%= form.label :network_cluster_ids, class: "form-label" %>
            <%= form.select :network_cluster_ids, RoomDecorator.network_clusters_options_for_select,
                                  { include_blank: t("access_control.blank") },
                                  class: "form-select", multiple: true, data: { controller: :select } %>
          </fieldset>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t("action.cancel") %></button>
            <%= form.submit(class: "btn btn-info") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
