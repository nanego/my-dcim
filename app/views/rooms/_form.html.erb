<%= form_for(@room, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @room.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@room.errors.count, "erreur", "erreurs") %> lors de la sauvegarde :</h4>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Nom', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :site, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :site_id, Site.all.map {|s| [s.name, s.id]}, class: "form-control", include_blank: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :position, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :position, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Afficher sur la page d\'accueil', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :display_on_home_page, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
