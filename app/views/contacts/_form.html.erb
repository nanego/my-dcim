<%= form_for(@contact, html: { class: "col-12 col-md-10 col-lg-8 mx-auto", role: "form" }) do |f| %>
  <%= render FormErrorsComponent.new(@contact) %>

  <%= render CardComponent.new(extra_classes: "bg-body-tertiary") do |card| %>
    <fieldset class="col-12">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </fieldset>

    <fieldset class="col-12 mt-4">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </fieldset>

    <fieldset class="col-12 mt-4">
      <%= f.label :phone_number, class: "forml-label" %>
      <%= f.phone_field :phone_number, class: "form-control" %>
    </fieldset>

    <fieldset class="col-12 mt-4">
      <%= f.label :email, class: "forml-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </fieldset>
  <% end %>

  <div class="col-12 py-4 mt-4 text-end sticky-bottom bg-body-tertiary border-top">
    <%= link_to t("action.cancel"), contacts_path, class: "btn btn-outline-secondary" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
