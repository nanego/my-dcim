<div class="overflow-x-scroll">
 <div class="rooms-overview d-grid my-1 pe-2">
    <% bays.each do |bay| %>
      <div style="grid-column: <%= "#{bay.position}/#{bay.position+1}" %>;
                  grid-row:<%= "#{bay.lane.to_i}/#{bay.lane.to_i+1}" %>;
                  max-width: 195px;">
        <% bay.frames.sorted.each_with_index do |frame, index| %>
          <div class="<%= class_names("overviewed_frame bg-secondary-subtle border-secondary-subtle border", "no-margin": index > 0, highlighted: @frames && @frames.include?(frame)) %>">
            <%= link_to frame.name, room_path(frame.room, view: params[:view], islet: islet, "bay-id": bay, "frame-id": frame), class: "link-body-emphasis" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
