<%= render 'layouts/breadcrumb', breadcrumb_variables: { 'Etats des serveurs' => '' } %>

<div class="page-header">
  <%= link_to new_server_state_path, class: 'btn btn-primary' do %>
    <span class="bi bi-plus"></span>
    New Server state
  <% end %>
  <h1>Listing server_states</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Nom</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @server_states) do |server_state| %>
            <td><%= server_state %></td>
            <td><%= link_to 'Voir', server_state %></td>
        <td><%= link_to 'Edit', edit_server_state_path(server_state) %></td>
        <td><%= link_to 'Destroy', server_state, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      <% end %>
    </tbody>
  </table>
</div>
