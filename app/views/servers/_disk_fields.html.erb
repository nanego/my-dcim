<li class="list-group-item">
  <fieldset>
    <div class="col-sm-4">
      <%= f.number_field :quantity, class: "form-control", placeholder: true %>
    </div>
    <div class="col-sm-4">
      <%= f.collection_select :disk_type_id, DiskType.order(:quantity), :id, :to_s, class: "form-control" %>
    </div>
    <span>
      <%= f.hidden_field :_destroy %>
      <%= link_to t("action.delete"), '#', class: "remove_fields float-end" %>
    </span>
  </fieldset>
</li>
