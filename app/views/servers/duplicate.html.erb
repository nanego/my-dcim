<% provide(:title, "#{t("servers.index.title")} | #{t(".title", server_name: @original_server.name)}") %>
<%= render 'layouts/breadcrumb', breadcrumb_steps: {
    t("visualization.title") => overview_rooms_path,
    @original_server.frame.room.name => room_path(@original_server.frame.room, view: params[:view]),
    "#{Islet.model_name.human} #{@original_server.frame.islet.name}" => room_path(@original_server.frame.room, islet: @original_server.frame.islet.name, :view => params[:view], bg: params[:bg]),
    t("layouts.breadcrumb.bay.double", name: @original_server.frame.bay) => room_path(@original_server.frame.room, islet: @original_server.frame.islet.name, "bay-id": @original_server.frame.bay_id, view: params[:view]),
    t("layouts.breadcrumb.bay.simple", name: @original_server.frame.name) => frame_path(@original_server.frame, view: params[:view]),
    @original_server.name => server_path(@original_server),
    t("servers.index.title") => servers_path,
    t("action.duplicate") => ""
}%>


<div class="row my-5">
  <%= render Page::HeadingComponent.new(title: t(".title", server_name: @original_server.name)) %>
  <%= render "form" %>
</div>
