<%= render partial: "servers/room", locals: {
                  room: @server.bay.room,
                  islets: @servers_per_frames[@server.bay.islet.room_id],
                  view_side: :back,
                  should_show_heading: false
  } %>

<% unless @connections.empty? %>
  <div class="fs-5 mt-4">
    <h2><%= Connection.model_name.human %></h1>

    <% @connections.each do |connection| %>
      <p>
        <%= connection.description %>
      </p>
    <% end %>
  </div>
<% end %>
