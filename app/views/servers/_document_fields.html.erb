<fieldset class="nested-form-wrapper d-flex mb-4 align-items-center" data-new-record="<%= f.object.new_record? %>">
  <%- if f.object.document.present? %>
    <span class="flex-grow-1"><%= f.object.document.metadata["filename"]%></span>
  <%- else %>
    <span class="flex-grow-1">
      <%= f.hidden_field :document, value: f.object.cached_document_data %>
      <%= f.file_field :document, class: "form-control" %>
    </span>
  <%- end %>
  <span>
    <%= f.hidden_field :_destroy %>
    <button type="button" data-action="nested-form#remove" class="btn btn-danger btn-sm ms-4">
      <%= t("action.delete") %>
    </button>
  </span>
</fieldset>
