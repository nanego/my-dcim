<% provide(:title, t(".title")) %>
<%= render "layouts/breadcrumb", breadcrumb_steps: {
  t(".title") => "" }
%>

<div class="d-flex justify-content-between bg-body p-4">
  <h1><%= t(".title") %></h1>
  <div class="align-self-center">
    <%= link_to external_app_records_path, class: "btn btn-primary" do %>
      <span class="bi bi-arrow-repeat"></span>
      <%= t(".sync_with_external_apps") %>
    <% end %>
    <%= link_to import_csv_servers_path, class: "btn btn-success" do %>
      <span class="bi bi-plus-lg"></span>
      <%= t(".add_server_via_csv") %>
    <% end %>
    <%= link_to new_server_path, class: "btn btn-success" do %>
      <span class="bi bi-plus-lg"></span>
      <%= t(".add_server") %>
    <% end %>
  </div>
</div>

<%= render FilterComponent.new(@filter) do |c| %>
  <% c.with_form do |f| %>
    <div class="w-100">
      <fieldset class="form-floating">
        <%= f.text_field :q, class: "form-control", placeholder: t("filters.placeholder.search") %>
        <%= f.label :q %>
      </fieldset>
    </div>

    <div>
      <fieldset class="form-floating">
        <%= f.collection_select(:room_ids, Room.order(:name),
                                :id,
                                :name,
                                { prompt: true, include_blank: true, multiple: true },
                                { class: "form-select", data: { controller: :select } }) %>
        <%= f.label :room_ids %>
      </fieldset>
    </div>

    <div>
      <fieldset class="form-floating">
        <%= f.collection_select(:islet_ids, Islet.sorted,
                                :id,
                                :name,
                                { prompt: true, include_blank: true, multiple: true },
                                { class: "form-select", data: { controller: :select } }) %>
        <%= f.label :islet_ids %>
      </fieldset>
    </div>

    <div>
      <fieldset class="form-floating">
        <%= f.collection_select(:bay_ids, Bay.sorted,
                                :id,
                                :name,
                                { prompt: true, include_blank: true, multiple: true },
                                { class: "form-select", data: { controller: :select } }) %>
        <%= f.label :bay_ids %>
      </fieldset>
    </div>

    <div>
      <fieldset class="form-floating">
        <%= f.collection_select(:frame_ids, Frame.order(:name),
                                :id,
                                :name,
                                { prompt: true, include_blank: true, multiple: true },
                                { class: "form-select", data: { controller: :select } }) %>
        <%= f.label :frame_ids %>
      </fieldset>
    </div>

    <div>
      <fieldset class="form-floating">
        <%= f.collection_select(:modele_ids, Modele.sorted,
                                :id,
                                :name,
                                { prompt: true, include_blank: true, multiple: true },
                                { class: "form-select", data: { controller: :select } }) %>
        <%= f.label :modele_ids %>
      </fieldset>
    </div>

    <div>
