<% provide(:title, "Matériels") %>
<%= render 'layouts/breadcrumb', breadcrumb_variables: {t("inventories") => servers_url, 'Matériels' => ''} %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>
    <div class="col-md-9">
      <div class="page-header">
        <%= link_to import_csv_servers_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Ajouter par fichier CSV
        <% end %>
        <%= link_to new_server_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Ajouter un matériel
        <% end %>
        <h1>Matériels</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Type</th>
              <th>Salle</th>
              <th>Ilot</th>
              <th>Baie</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <%= content_tag_for(:tr, @servers) do |server| %>
              <td><%= link_to server.name, server_path(server) %></td>
              <td>
                <%=
                  link_to server.modele.category, category_path(server.modele.category) if server.modele.try(:category)
                %>
              </td>
              <td>
                <%= link_to server.room, room_path(server.room) if server.room %>
              </td>
              <td>
                <%= link_to server.islet, islet_path(server.islet) if server.islet %>
              </td>
              <td>
                <%= link_to server.bay, bay_path(server.bay) if server.bay %>
              </td>
              <td>
                <div class="btn-group btn-group-sm btn-group-vertical" role="group" aria-label="...">
                  <%= link_to 'Modifier', edit_server_path(server), class: 'btn btn-primary' %>
                  <%= link_to 'Supprimer',
                              server,
                              method: :delete,
                              data: { confirm: 'Êtes-vous sûr ?' },
                              class: 'btn btn-danger' %>
                </div>
              </td>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
