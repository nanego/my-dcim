<%
  provide(:title, "#{ContractType.model_name.human(count: 2)} | #{@contract_type}")

  breadcrumb_steps = {
    ContractType.model_name.human(count: 2) => contract_types_path, @contract_type => ""
  }
%>

<%= render Page::HeadingShowComponent.new(resource: @contract_type, title: @contract_type.name, breadcrumb_steps:) %>
<div class="col-12 p-4 border-top">
  <div class="col-12 col-lg-6">
    <%= render CardComponent.new do |card| %>
      <dl class="show-page_dl d-grid row-gap-2 mb-0">
        <% %i[name].each do |attribute_name| %>
          <dt class="pb-2"><%= ContractType.human_attribute_name(attribute_name) %></dt>
          <dd class="mb-0 pb-2 ps-3"><%= @contract_type.public_send(attribute_name) %></dd>
        <% end %>
      </dl>
    <% end %>
  </div>
  <%= render ChangelogEntries::ObjectListComponent.new(@contract_type) %>
</div>
