<% provide(:title, "Changelogs") %>
<%= render "layouts/breadcrumb", breadcrumb_variables: {"Changelogs" => ""} %>

<div class="container-fluid">
  <div class="page-header">
    <h1>Changelogs</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Object</th>
          <th>Author</th>
          <th>Action</th>
          <th>Created At</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @changelog_entries) do |changelog_entry| %>
          <td><%= changelog_entry.object_display_name %></td>
          <td><%= changelog_entry.author %></td>
          <td><%= render changelog_entry.action_label_to_component %></td>
          <td><%=l changelog_entry.created_at %></td>
          <td><%= link_to "More details", changelog_entry_path(changelog_entry) %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= paginate @changelog_entries %>
