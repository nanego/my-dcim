<%= render 'layouts/breadcrumb', breadcrumb_variables: {
  'Gestionnaires' => gestions_path,
  @gestion => '',
} %>

<div class="container">
  <div class="page-header">
    <%= link_to gestions_path, class: 'btn btn-outline-secondary' do %>
      <span class="bi bi-list-ul"></span>
      <%= t("action.back") %>
    <% end %>
    <%= link_to @gestion, class: 'btn btn-primary' do %>
      <span class="bi bi-eye"></span>
      <%= t("action.show") %>
    <% end %>
    <h1>
      <%= t(".title") %>
    </h1>
  </div>

  <%= render 'form' %>
</div>
