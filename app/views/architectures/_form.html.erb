<%= render FormErrorsComponent.new(@architecture) %>

<%= form_for(@architecture, html: { class: "col-11 col-md-10 col-lg-8 mx-auto", role: "form" }) do |f| %>
  <%= render CardComponent.new(extra_classes: "mt-4 bg-body-tertiary") do |card| %>
    <% card.with_header do %>
      <%= t("display") %>
    <% end %>

    <fieldset class="col-12">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </fieldset>
    <fieldset class="col-12 mt-4">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </fieldset>
  <% end %>

  <div class="col-12 py-3 text-end sticky-bottom bg-body-tertiary">
    <%= link_to t("action.cancel"), architectures_path, class: "btn btn-outline-secondary" %>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
