<%= render 'layouts/breadcrumb', breadcrumb_variables: {
  t("inventories") => modeles_url,
  Architecture.model_name.human.pluralize => ""
}%>

<div class="container-fluid">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_architecture_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          <%= t(".new_architecture") %>
        <% end %>
        <h1>
          <%= t(".title") %>
        </h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>
                <%= Architecture.human_attribute_name(:name) %>
              </th>
              <th>
                <%= Architecture.human_attribute_name(:usage) %>
              </th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <%= content_tag_for(:tr, @architectures) do |architecture| %>
              <td>
                <%= link_to architecture, architecture_path(architecture) %>
              </td>
              <td>
                <%= link_to pluralize(architecture.modeles.count, 'modèle', 'modèles'), modeles_path %>
              </td>
              <td class="text-right">
                <%= link_to 'Modifier', edit_architecture_path(architecture), class: 'btn btn-primary' %>
                <%= link_to 'Supprimer',
                            architecture,
                            method: :delete,
                            data: { confirm: t(".delete_confirmation") },
                            class: 'btn btn-danger' %>
              </td>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>

</div>
