<% provide(:title, "#{Frame.model_name.human.pluralize} | #{t("layouts.breadcrumb.bay.simple", name: @frame.name)}") %>
<%
  breadcrumb_variables = {
    t("visualization") => overview_rooms_path,
    @room.name => ((@frame.present? || params[:islet].present?) ? room_path(@room, view: params[:view]) : "")
  }
  if @frame.present? && @frame.bay.islet.name.present?
    breadcrumb_variables[t("layouts.breadcrumb.islet", name: @frame.bay.islet.name)] = room_path(@room, islet: @frame.bay.islet.name, view: params[:view])
  elsif params[:islet].present?
    breadcrumb_variables[t("layouts.breadcrumb.islet", name: params[:islet])] = ""
  end
  breadcrumb_variables[t("layouts.breadcrumb.bay.double", name: @frame.bay)] = room_path(@room, islet: @frame.bay.islet.name, "bay-id": @frame.bay_id, view: params[:view]) if @frame.has_coupled_frame?
  breadcrumb_variables[t("layouts.breadcrumb.bay.simple", name: @frame.name)] = "" if @frame.present?
%>
<%= render "layouts/breadcrumb", breadcrumb_variables: breadcrumb_variables %>

<div class="container-fluid" id="bay-container">
  <%= render "frames/show_complete_frame" %>
</div>

<%= render "servers/modal_add_element_in_frame" %>
<%= render "ports/modal_edit_port" %>

<script type="javascript">
  reset_u_heights()
  window.addEventListener("resize", function (event) {
    reset_u_heights()
  })
</script>
