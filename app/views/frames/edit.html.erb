<% provide(:title, "#{Frame.model_name.human.pluralize} | #{@frame.name} | #{t("action.edit")}") %>
<%= render "layouts/breadcrumb", breadcrumb_steps: {
  Room.model_name.human.pluralize => overview_rooms_path,
  @frame.room.name => @frame.present? ? room_path(@frame.room) : "",
  Frame.model_name.human.pluralize => frames_path,
  @frame.name => frame_path(@frame),
  t("action.edit") => ""
} %>

<div class="row my-5">
  <div class="col-11 col-md-10 col-lg-8 mx-auto">
    <div class="d-flex justify-content-between pb-5">
      <%= link_to frames_path, class: "btn align-self-center d-inline-flex",
                               title: t("action.back") do %>
        <span class="bi bi-chevron-left"></span>
        <span class="d-none d-md-inline-block ms-1"><%= t("action.back") %></span>
      <% end %>
      <h1 class="px-4 text-center"><%= t(".title", frame: @frame.name) %></h1>
      <div>
        <%= link_to visualization_frame_path(@frame), class: "btn btn-primary align-self-center d-inline-flex", title: t("visualization.title") do %>
          <span class="bi bi-eye"></span>
          <span class="d-none d-md-inline-block ms-1"><%= t("visualization.title") %></span>
        <% end %>
        <%= link_to @frame, class: "btn btn-primary align-self-center d-inline-flex", title: t("action.show") do %>
          <span class="bi bi-eye"></span>
          <span class="d-none d-md-inline-block ms-1"><%= t("action.show") %></span>
        <% end %>
      </div>
    </div>
    <%= render "form" %>
  </div>
</div>
