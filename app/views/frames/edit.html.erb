<%= render 'layouts/breadcrumb', breadcrumb_variables: {
  Room.model_name.human.pluralize => overview_rooms_path,
  @frame.room.name => @frame.present? ? room_path(@frame.room) : '',
  t(".title", frame: @frame.name) => '',
} %>

<div class="container">
  <div class="page-header">
    <%= link_to frames_path, class: 'btn btn-default' do %>
      <span class="bi bi-list-ul"></span>
      <%= t("action.back") %>
    <% end %>
    <%= link_to @frame, class: 'btn btn-primary' do %>
      <span class="bi bi-eye"></span>
      <%= t("action.show") %>
    <% end %>
    <h1>
        <%= t(".title", frame: @frame.name) %>
    </h1>
  </div>

  <%= render 'form' %>
</div>
