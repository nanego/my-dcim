<%= render 'layouts/breadcrumb', breadcrumb_variables: {
  t("breadcrumb.settings") => disk_types_url,
  t("breadcrumb.disk_type") => ""}
%>

<div class="container-fluid">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_disk_type_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          <%= t(".add_disk_type") %>
        <% end %>
        <h1>
          <%= t(".title") %>
        </h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>
                <%= DiskType.human_attribute_name(:name) %>
              </th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <%= content_tag_for(:tr, @disk_types) do |disk_type| %>
              <td><%= disk_type.to_s %></td>
              <td><%= link_to t("action.edit"), edit_disk_type_path(disk_type) %></td>
              <td><%= link_to t("action.delete"), disk_type, method: :delete, data: { confirm: t("action.confirm") }, class: 'btn btn-warning' %></td>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
