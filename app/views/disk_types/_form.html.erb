<%= render FormErrorsComponent.new(@category) %>

<%= form_for(@disk_type, html: { class: "bg-body-tertiary p-4 rounded border", role: "form" }) do |f| %>
  <div class="row g-3">
    <fieldset class="col-12">
      <%= f.label :quantity, class: "form-label" %>
      <%= f.number_field :quantity, class: "form-control" %>
    </fieldset>

    <fieldset class="col-12 mt-4">
      <%= f.label :unit, class: "forml-label" %>
      <%= f.select :unit, DiskType::UNITS, {}, class: "form-select" %>
    </fieldset>

    <fieldset class="col-12 mt-4">
      <%= f.label :technology, class: "forml-label" %>
      <%= f.select :technology, DiskType::TECHNOLOGIES, {}, class: "form-select" %>
    </fieldset>

    <div class="col-12 mt-4">
      <%= f.submit class: "btn btn-primary w-100" %>
    </div>
  </div>
<% end %>
