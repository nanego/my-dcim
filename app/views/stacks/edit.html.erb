<% provide(:title, "#{Stack.model_name.human.pluralize} | #{@stack.name} | #{t("action.edit")}") %>
<%= render "layouts/breadcrumb", breadcrumb_variables: {
  Stack.model_name.human.pluralize => stacks_path,
  @stack => stack_path(@stack),
  t("action.edit") => ""
} %>

<div class="row my-5">
  <div class="col-11 col-md-10 col-lg-8 mx-auto">
    <div class="d-flex justify-content-between pb-5">
      <%= link_to stacks_path, class: "btn btn-outline-secondary align-self-center d-inline-flex",
                               title: t("action.back") do %>
        <span class="bi bi-chevron-left"></span>
        <span class="d-none d-md-inline-block ms-1"><%= t("action.back") %></span>
      <% end %>
      <h1 class="px-4 text-center"><%= t(".title") %></h1>
      <%= link_to @stack, class: "btn btn-primary align-self-center d-inline-flex", title: t("action.show") do %>
        <span class="bi bi-eye"></span>
        <span class="d-none d-md-inline-block ms-1"><%= t("action.show") %></span>
      <% end %>
    </div>
    <%= render "form" %>
  </div>
</div>
