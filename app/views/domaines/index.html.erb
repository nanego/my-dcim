<%= render 'layouts/breadcrumb', breadcrumb_variables: {'Paramètres' => modeles_url, 'Domaines' => ''} %>

<div class="container-fluid">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_domaine_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Ajouter un domaine
        <% end %>
        <h1>Domaines</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Nom</th>
            <th>Usage</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <%= content_tag_for(:tr, @domaines) do |domaine| %>
            <td><%= domaine %></td>
            <td><%= pluralize(domaine.servers.count, 'serveur', "serveurs") %> </td>
            <td><%= link_to 'Voir', domaine_path(domaine), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Modifier', edit_domaine_path(domaine), class: 'btn btn-primary' %></td>
            <td>
              <%= link_to 'Supprimer',
                          domaine,
                          method: :delete,
                          data: { confirm: 'Ce domaine ne pourra pas être supprimé tant qu\'il sera associé à au moins un serveur. Voulez-vous continuer ?' },
                          class: 'btn btn-danger' %>
            </td>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>


