<%= render 'layouts/breadcrumb', breadcrumb_variables: {
  t("breadcrumb.settings") => modeles_url,
  Domaine.model_name.human.pluralize => ""}
%>

<div class="container-fluid">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_domaine_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          <%= t(".new_domaine") %>
        <% end %>
        <h1>
          <%= t(".title") %>
        </h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>
              <%= Domaine.human_attribute_name(:name) %>
            </th>
            <th>
              <%= Domaine.human_attribute_name(:usage) %>
            </th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <%= content_tag_for(:tr, @domaines) do |domaine| %>
            <td>
              <%= link_to domaine, domaine_path(domaine) %>
            </td>
            <td>
              <%= link_to pluralize(domaine.servers.count, 'serveur', "serveurs"), servers_path %>
            </td>
            <td>
              <%= link_to t("action.edit"), edit_domaine_path(domaine), class: 'btn btn-primary' %>
              <%= link_to t("action.delete"),
                          domaine,
                          method: :delete,
                          data: { confirm: t(".delete_confirmation") },
                          class: 'btn btn-danger' %>
            </td>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>


