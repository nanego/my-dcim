<%= render FormErrorsComponent.new(@port_type) %>

<%= form_for(@port_type, html: { class: "bg-body-tertiary p-4 rounded border", role: "form" }) do |f| %>
  <div class="row g-3">
    <fieldset class="col-12">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </fieldset>

    <div class="col-12 mt-4">
      <fieldset class="form-check">
        <%= f.check_box :power, class: "form-check-input" %>
        <%= f.label :power, class: "form-check-label" %>
      </fieldset>
    </div>

    <div class="col-12 mt-4">
      <%= f.submit class: "btn btn-primary w-100" %>
    </div>
  </div>
<% end %>
