<%
  breadcrumb
    .add(t("power_distribution_units.index.title"), power_distribution_units_path) # TODO: prefer use ActiveRecord translation of Modele name
    .add(@pdu.name, power_distribution_unit_path(@pdu))
    .add(t("action.edit"))
%>

<%= render Page::HeadingComponent.new(
  title: t(".title"), breadcrumb:, back_button_url: power_distribution_unit_path(@pdu)
) do |heading| %>
  <% heading.with_right_content do %>
    <div class="align-self-center d-inline-flex">
      <%= render ButtonComponent.new(t("action.show"),
                                    url: power_distribution_unit_path(@pdu),
                                    variant: :primary,
                                    icon: "eye",
                                    is_responsive: true) %>
    </div>
  <% end %>
<% end %>
<div class="col-12 p-4 border-top">
  <%= render "form" %>
</div>
