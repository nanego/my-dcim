<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3 style="width: 100%;text-align: center;">Connexion</h3>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div id="cas-login">
      <%= link_to 'Login with CAS', user_cas_omniauth_authorize_path, class: 'btn btn-success', style: 'width: 100%;' %>
    </div>
    <div id="oidc-login">
      <%= link_to 'Login with OIDC', user_openid_connect_omniauth_authorize_path, class: 'btn btn-success', style: 'width: 100%;' %>
    </div>
    <% if Rails.env.development? %>
      <br>
      <div class="form-group">
        <%- if devise_mapping.registerable? %>
          <%= link_to 'Inscription', new_registration_path(resource_name), class: 'right'  %>
        <% end -%>
        <%= f.label :email %>
        <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%- if devise_mapping.recoverable? %>
          <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: 'right' %>
        <% end -%>
        <%= f.label 'Mot de passe' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.submit 'Se connecter', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Se souvenir de moi
          </label>
        </div>
      <% end -%>
    <% end %>
  <% end %>
</div>
