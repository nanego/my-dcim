<% provide(:title, "#{MemoryType.model_name.human(count: 2)} | #{@memory_type} | #{t("action.edit")}") %>
<%= render "layouts/breadcrumb", breadcrumb_steps: {
  MemoryType.model_name.human(count: 2) => memory_types_path,
  @memory_type => memory_type_path(@memory_type),
  t("action.edit") => ""
} %>

<div class="row my-5">
  <div class="col-11 col-md-10 col-lg-8 mx-auto">
    <div class="d-flex justify-content-between pb-5">
      <%= link_to memory_types_path, class: "btn btn-outline-secondary align-self-center d-inline-flex",
                                     title: t("action.back") do %>
        <span class="bi bi-chevron-left"></span>
        <span class="d-none d-md-inline-block ms-1"><%= t("action.back") %></span>
      <% end %>
      <h1 class="px-4 text-center"><%= t(".title") %></h1>
      <%= link_to @memory_type, class: "btn btn-primary align-self-center d-inline-flex", title: t("action.show") do %>
        <span class="bi bi-eye"></span>
        <span class="d-none d-md-inline-block ms-1"><%= t("action.show") %></span>
      <% end %>
    </div>
    <%= render "form" %>
  </div>
</div>
