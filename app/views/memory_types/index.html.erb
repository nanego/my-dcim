<%= render 'layouts/breadcrumb', breadcrumb_variables: {'ParamÃ¨tres' => modeles_url, 'Memory type' => ''} %>

<div class="container-fluid">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_memory_type_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Nouveau type de RAM
        <% end %>
        <h1>Listing memory types</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Nom</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <%= content_tag_for(:tr, @memory_types) do |memory_type| %>
              <td>
                <%= link_to memory_type, memory_type_path(memory_type) %>
              </td>
              <td class="text-right">
                <%= link_to 'Modifier', edit_memory_type_path(memory_type), class: 'btn btn-primary' %>
                <%= link_to 'Supprimer', memory_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </td>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
