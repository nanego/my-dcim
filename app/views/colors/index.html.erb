<%= render 'layouts/breadcrumb', breadcrumb_variables: {'Paramètres' => modeles_url, 'Couleurs' => ''} %>

<div class="container-fluid">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <h1>Couleurs</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th></th>
            <th>Type</th>
            <th>Id</th>
            <th>Code</th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <%= content_tag_for(:tr, @colors) do |color| %>
            <td style="width: 40px;background-color: <%= color.code %> !important;"></td>
            <td><%= color.parent_type %></td>
            <td><%= color.parent_id %></td>
            <td><%= color.code %></td>
            <td><%= link_to 'Modifier', edit_color_path(color), class: 'btn btn-primary' %></td>
            <td>
              <%= link_to 'Supprimer',
                          color,
                          method: :delete,
                          data: { confirm: 'Supprimer cette couleur la supprimera des données où elle est utilisée. Voulez-vous continuer ?' },
                          class: 'btn btn-danger' %>
            </td>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>
