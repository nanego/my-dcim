<%= render 'layouts/breadcrumb', breadcrumb_variables: {
  t("breadcrumb.settings") => modeles_url,
  Color.model_name.human.pluralize => ""}
%>

<div class="container-fluid">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <h1>
          <%= t(".title") %>
        </h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th></th>
            <th>
              <%= Color.human_attribute_name(:type) %>
            </th>
            <th>
              <%= Color.human_attribute_name(:id) %>
            </th>
            <th>
              <%= Color.human_attribute_name(:code) %>
            </th>
            <th></th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <%= content_tag_for(:tr, @colors) do |color| %>
            <td style="width: 40px;background-color: <%= color.code %> !important;"></td>
            <td><%= color.parent_type %></td>
            <td><%= color.parent_id %></td>
            <td><%= color.code %></td>
            <td><%= link_to t("action.edit"), edit_color_path(color), class: 'btn btn-primary' %></td>
            <td>
              <%= link_to t("action.delete"),
                          color,
                          method: :delete,
                          data: { confirm: t(".delete_confirmation") },
                          class: 'btn btn-danger' %>
            </td>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>
