<%= render 'layouts/breadcrumb', breadcrumb_variables: {'Paramètres' => modeles_url, 'Types de matériel' => ''} %>

<div class="container-fluid">

  <div class="row">

    <div class="col-md-3">
      <%= render 'pages/params_menu' %>
    </div>

    <div class="col-md-9">

      <div class="page-header">
        <%= link_to new_category_path, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Ajouter un type de matériel
        <% end %>
        <h1>Types de matériel</h1>
      </div>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Nom</th>
            <th>Usage</th>
            <th></th>
          </tr>
          </thead>

          <tbody>
          <%= content_tag_for(:tr, @categories) do |category| %>
            <td>
              <%= link_to category.name, category_path(category) %>
            </td>
            <td><%= link_to "#{pluralize(category.modeles.count, 'modèle', 'modèles')}", modeles_path %> </td>
            <td class="text-right">
              <%= link_to 'Modifier', edit_category_path(category), class: 'btn btn-primary' %>
              <%= link_to 'Supprimer',
                          category,
                          method: :delete,
                          data: { confirm: 'Ce type de matériel ne pourra pas être supprimé tant qu\'il aura au moins un modèle associé. Voulez-vous continuer ?' },
                          class: 'btn btn-danger' %>
            </td>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>

</div>
