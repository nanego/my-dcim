        <strong class="mydcim-sidebar-links-heading d-flex align-items-center fw-semibold">
          <i class="bi bi-hdd-rack me-2 text-primary"></i>
          <%= t(".equipment.title") %>
        </strong>
        <ul class="list-unstyled fw-normal pb-2 small">
