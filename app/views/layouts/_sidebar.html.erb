      <!-- Location -->
      <li class="mydcim-sidebar-links-group py-2">
        <strong class="mydcim-sidebar-links-heading d-flex align-items-center fw-semibold">
          <i class="bi bi-geo-alt me-2 text-primary"></i>
          <%= t(".location.title") %>
        </strong>
        <ul class="list-unstyled fw-normal pb-2 small">
          <li>
            <%= link_to sites_path,
                        class: class_names("mydcim-sidebar-links-link d-inline-block rounded",
                                          active: controller.controller_name == "sites") do %>
              <%= Site.model_name.human.pluralize %>
            <% end %>
          </li>
          <li>
            <%= link_to rooms_path,
                        class: class_names("mydcim-sidebar-links-link d-inline-block rounded",
                          active: controller.controller_name == "rooms" && !hide_inventories_sidebar?) do %>
              <%= Room.model_name.human.pluralize %>
            <% end %>
          </li>
          <li>
            <%= link_to islets_path,
                        class: class_names("mydcim-sidebar-links-link d-inline-block rounded",
                                          active: controller.controller_name == "islets") do %>
              <%= Islet.model_name.human.pluralize %>
            <% end %>
          </li>
          <li>
            <%= link_to bays_path,
