            <% end %>
          </li>
          <li>
            <%= link_to frames_path,
                        class: class_names("mydcim-sidebar-links-link d-inline-block rounded",
                                          active: controller.controller_name == "frames") do %>
              <%= Frame.model_name.human.pluralize %>
            <% end %>
          </li>
        </ul>
      </li>
      <!-- Equipement -->
