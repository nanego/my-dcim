<!DOCTYPE html>
<html data-bs-theme="<%= current_user.theme %>">
  <head>
    <%= render "layouts/head" %>
  </head>
  <body class="mydcim overflow-hidden">
    <%= render "layouts/header" %>
    <%= render "layouts/messages" %>
    <div class="mydcim-wrapper container-fluid">
      <div class="row flex-nowrap">
        <%= render "layouts/sidebar" %>
        <main class="mydcim-main ms-sm-auto px-md-4 w-auto flex-fill pb-4 bg-body" role="main">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
