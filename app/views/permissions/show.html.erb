<%
  breadcrumb
    .add_step(Permission.model_name.human.pluralize, permissions_path)
    .add_step(title = @permission)
%>

<%= render Page::HeadingShowComponent.new(resource: @permission, title:, breadcrumb:) %>
<div class="col-12 p-4 border-top">
  <div class="col-12 col-lg-6">
    <%= render CardComponent.new do |card| %>
      <dl class="show-page_dl d-grid row-gap-2 mb-0">
        <% %i[name].each do |attribute_name| %>
          <dt class="pb-2"><%= Permission.human_attribute_name(attribute_name) %> :</dt>
          <dd class="mb-0 pb-2 ps-3"><%= @permission.public_send(attribute_name) %></dd>
        <% end %>
      </dl>
    <% end %>
  </div>
  <%= render ChangelogEntries::ObjectListComponent.new(@permission) %>
</div>
