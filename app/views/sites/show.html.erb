<% provide(:title, "#{Site.model_name.human.pluralize} | #{@site.name}") %>
<%= render "layouts/breadcrumb",
           breadcrumb_steps: { Site.model_name.human.pluralize => sites_path, @site.name => "" } %>

<div class="row my-5">
  <div class="col-11 col-md-10 col-lg-8 mx-auto">
    <div class="d-flex justify-content-between pb-5">
      <%= link_to sites_path, class: "btn align-self-center d-inline-flex",
                              title: t("action.back") do %>
        <span class="bi bi-chevron-left"></span>
        <span class="d-none d-md-inline-block ms-1"><%= t("action.back") %></span>
      <% end %>
      <h1 class="text-center px-4"><%= t(".title", site_id: @site.id, site_name: @site.name) %></h1>
      <%= link_to edit_site_path(@site), class: "btn btn-info align-self-center d-inline-flex",
                                          title: t("action.edit") do %>
        <span class="bi bi-pencil"></span>
        <span class="d-none d-md-inline-block ms-1"><%= t("action.edit") %></span>
      <% end %>
    </div>

    <dl class="bg-body-tertiary p-4 rounded border">
      <% %i[name position latitude longitude].each do |attribute_name| %>
        <dt><%= Site.human_attribute_name(attribute_name) %> :</dt>
        <dd><%= @site.public_send(attribute_name) %></dd>
      <% end %>
    </dl>
  </div>
</div>
