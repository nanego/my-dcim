<div class="page-header">
  <h1>Listing maintenance_contracts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Start date</th>
            <th>End date</th>
            <th>Maintainer</th>
            <th>Contract type</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @maintenance_contracts) do |maintenance_contract| %>
            <td><%= maintenance_contract.start_date %></td>
            <td><%= maintenance_contract.end_date %></td>
            <td><%= maintenance_contract.maintainer_id %></td>
            <td><%= maintenance_contract.contract_type_id %></td>
            <td><%= link_to 'Voir', maintenance_contract %></td>
        <td><%= link_to 'Edit', edit_maintenance_contract_path(maintenance_contract) %></td>
        <td><%= link_to 'Destroy', maintenance_contract, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
      <% end %>
    </tbody>
  </table>
</div>
