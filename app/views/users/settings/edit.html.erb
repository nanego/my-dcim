<div class="authform">
  <h3><%= t(".title") %></h3>

  <%= form_for @user, url: users_settings_path do |f| %>
    <div class="form-group">
      <%= f.label :locale %>
      <%= f.select :locale, User::AVAILABLE_LOCALES.compact, selected: @user.locale, class: "form-control" %>
    </div>

    <!-- TODO: Remove me when themes will be implemented -->
<!--    <div class="form-group">-->
      <%#= f.label :theme %>
      <%#= f.select :theme, User::AVAILABLE_THEMES.compact, selected: @user.theme, class: "form-control" %>
<!--    </div>-->

    <div class="form-group">
      <%= f.label :visualization_bay_default_background_color %>
      <%= f.select :visualization_bay_default_background_color, User::AVAILABLE_BAY_BACKGROUND_COLORS.compact,
                   selected: @user.visualization_bay_default_background_color, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :visualization_bay_default_orientation %>
      <%= f.select :visualization_bay_default_orientation, User::AVAILABLE_BAY_ORIENTATIONS.compact,
                   selected: @user.visualization_bay_default_orientation, class: "form-control" %>
    </div>

    <%= f.submit t("action.edit"), class: "button right" %>
  <% end %>
</div>
