case type_composant
  when 'IPMI'
      label = type_composant.capitalize
  when 'CM'
      label = "RJ45 #{f.object.position}"
  when 'ALIM'
      label = "Alim #{f.object.position}"
  when 'SLOT'
      label = f.object.name.to_s
  end
%>

<% if f.object.type_composant.try(:name) == type_composant %>
  <li class="list-group-item">
    <fieldset>
      <% label = label.presence || "Nouvel emplacement" %>
      <%= label %>
      <span>
        <%= f.hidden_field :_destroy %>
        <%= link_to "Supprimer", '#', class: "remove_fields pull-right" %>
      </span>
    </fieldset>
  </li>
<% end %>
