<% provide(:title, @modele.name) %>
<%= render 'layouts/breadcrumb', breadcrumb_variables: {
  t("inventories") => modeles_url,
  Modele.model_name.human.pluralize => modeles_path,
  "#{@modele.try(:name).present? ? @modele.name : t("modeles.new.title") }" => ''}
%>

<div class="container">
  <div class="page-header">
    <%= link_to modeles_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      <%= t("action.back") %>
    <% end %>
    <%= link_to @modele, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-info-sign"></span>
      <%= t("action.edit") %>
    <% end %>
    <h1>
      <%= t(".title") %>
    </h1>
  </div>

  <%= render 'form' %>
</div>
