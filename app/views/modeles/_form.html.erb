<%= form_for(@modele, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @modele.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@modele.errors.count, "error") %> prohibited this modele from being saved:</h4>

      <ul>
      <% @modele.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Nom', class: "col-sm-2 col-md-1 control-label" %>
    <div class="col-sm-10 col-md-11">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <%= f.label :category_id, class: "col-sm-2 col-md-1 control-label" %>
    <div class="col-sm-10 col-md-5">
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: "form-control"}) %>
    </div>
    <%= f.label :architecture_id, class: "col-sm-2 col-md-1 control-label" %>
    <div class="col-sm-10  col-md-5">
      <%= f.collection_select(:architecture_id, Architecture.all, :id, :name, {}, {class: "form-control"}) %>
    </div>
    <%= f.label :u, class: "col-sm-2 col-md-1 control-label" %>
    <div class="col-sm-10 col-md-5">
      <%= f.number_field :u, class: "form-control" %>
    </div>
    <%= f.label :marque_id, class: "col-sm-2 col-md-1 control-label" %>
    <div class="col-sm-10 col-md-5">
      <%= f.collection_select(:marque_id, Marque.all, :id, :name, {}, {class: "form-control"}) %>
    </div>
    <%= f.label :nb_elts, class: "col-sm-2 col-md-1 control-label" %>
    <div class="col-sm-10 col-md-5">
      <%= f.number_field :nb_elts, class: "form-control" %>
    </div>
    <%= f.label :color, class: "col-sm-2 col-md-1 control-label" %>
    <div class="col-sm-10 col-md-5">
      <%= f.text_field :color, class: "form-control" %>
    </div>
  </div>

  <div>

    <%= content_tag :span, 'Emplacements Slots', class: "col-sm-2 control-label" %>
    <div class="col-sm-10  col-md-4">
      <div class="panel panel-default">
        <ul class="list-group">
          <%= f.fields_for :composants do |builder| %>
            <%= render "composant_fields", :f => builder, :type_composant => 'SLOT' %>
          <% end %>
        </ul>
        <div class="panel-footer"><%= link_to_add_fields_with_prefilled_data "<span class='glyphicon glyphicon-plus' aria-hidden='true'></span> Ajouter un slot".html_safe, f, :composants, 'SLOT' %></div>
      </div>
    </div>

  </div>

  <!--
  <div class="col-sm-5 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Groupes d'interfaces</h4></div>
      <ul class="list-group">
        < f.fields_for :composants do |builder| %>
          < render "composant_fields", :f => builder %>
        < end %>
      </ul>
      <div class="panel-footer">< link_to_add_fields "Ajouter un groupe", f, :composants %></div>
    </div>
  </div>
  -->

  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit 'Sauvegarder', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
